<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="30" style="-fx-background-color: linear-gradient(to bottom, #ff6b6b 0%, #ee5a24 100%); -fx-padding: 40;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">

   <!-- Bank Logo & Header -->
   <VBox alignment="CENTER" spacing="10">
      <Label style="-fx-text-fill: white; -fx-font-size: 36; -fx-font-weight: bold;" text="Banking" />
      <Label style="-fx-text-fill: #e0e0e0; -fx-font-size: 18;" text="Secure Banking for Everyone" />
   </VBox>

   <!-- Feature Highlights -->
   <HBox alignment="CENTER" spacing="30">
      <VBox alignment="CENTER" spacing="10" style="-fx-background-color: rgba(255,255,255,0.1); -fx-background-radius: 10; -fx-padding: 20;">
         <Label style="-fx-text-fill: white; -fx-font-weight: bold;" text="Savings Accounts" />
         <Label prefHeight="42.0" prefWidth="122.0" style="-fx-text-fill: #e0e0e0; -fx-font-size: 12;" text="0.05 monthly interest for individuals" wrapText="true" />
         <Label prefHeight="41.0" prefWidth="120.0" style="-fx-text-fill: #e0e0e0; -fx-font-size: 12;" text="0.025 monthly interest for companies" wrapText="true" />
      </VBox>

      <VBox alignment="CENTER" spacing="10" style="-fx-background-color: rgba(255,255,255,0.1); -fx-background-radius: 10; -fx-padding: 20;">
         <Label style="-fx-text-fill: white; -fx-font-weight: bold;" text="Investment Accounts" />
         <Label style="-fx-text-fill: #e0e0e0; -fx-font-size: 12;" text="5% monthly interest" />
      </VBox>

      <VBox alignment="CENTER" spacing="10" style="-fx-background-color: rgba(255,255,255,0.1); -fx-background-radius: 10; -fx-padding: 20;">
         <Label style="-fx-text-fill: white; -fx-font-weight: bold;" text="Cheque Accounts" />
         <Label style="-fx-text-fill: #e0e0e0; -fx-font-size: 12;" text="Salary payments" />
      </VBox>
   </HBox>

   <!-- Call-to-Action Buttons -->
   <VBox alignment="CENTER" spacing="15">
      <Button onAction="#showLogin" style="-fx-background-color: #ff6b6b; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16; -fx-background-radius: 25; -fx-pref-width: 250; -fx-pref-height: 45;" text="Customer Login" />

      <Button onAction="#showRegistration" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: white; -fx-border-radius: 25; -fx-font-size: 16; -fx-pref-width: 250; -fx-pref-height: 45;" text="Create new customer" />
   </VBox>

   <!-- Footer -->
   <VBox alignment="CENTER" spacing="5">
      <Label style="-fx-text-fill: #e0e0e0;" text="24/7 Customer Support: 0800 123 456" />
      <Label style="-fx-text-fill: #e0e0e0; -fx-font-size: 12;" text="Â© 2025 Banking - All Rights Reserved" />
   </VBox>

</VBox>

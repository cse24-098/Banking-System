<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="569.0" prefWidth="528.0" spacing="20" style="-fx-background-color: linear-gradient(to bottom, #ff6b6b 0%, #ee5a24 100%);" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.banking_system_gui.CreatePasswordController">

    <padding>
        <Insets bottom="40" left="40" right="40" top="40" />
    </padding>

    <children>
        <!-- Header -->
        <VBox alignment="CENTER" spacing="10">
            <Label style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: white;" text="Create Password" />
            <Label style="-fx-font-size: 14; -fx-text-fill: #ecf0f1;" text="Set up your online banking password" />
        </VBox>

        <!-- Form -->
        <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30;">
            <VBox spacing="5">
                <Label style="-fx-font-weight: bold;" text="Customer ID *" />
                <TextField fx:id="customerIdField" promptText="Enter your Customer ID" style="-fx-pref-width: 300;" />
            </VBox>

            <VBox spacing="5">
                <Label style="-fx-font-weight: bold;" text="Create Password *" />
                <PasswordField fx:id="passwordField" promptText="Enter your password" style="-fx-pref-width: 300;" />
                <Label style="-fx-font-size: 11; -fx-text-fill: #7f8c8d;" text="Password must be at least 6 characters" />
            </VBox>

            <VBox spacing="5">
                <Label style="-fx-font-weight: bold;" text="Confirm Password *" />
                <PasswordField fx:id="confirmPasswordField" promptText="Re-enter your password" style="-fx-pref-width: 300;" />
            </VBox>

            <!-- Password Requirements -->
            <VBox spacing="5" style="-fx-background-color: #f8f9fa; -fx-padding: 10; -fx-border-radius: 5;">
                <Label style="-fx-font-weight: bold; -fx-font-size: 12;" text="Password Requirements:" />
                <Label style="-fx-font-size: 11; -fx-text-fill: #7f8c8d;" text="• At least 6 characters" />
                <Label style="-fx-font-size: 11; -fx-text-fill: #7f8c8d;" text="• Should include letters and numbers" />
            </VBox>
        </VBox>

        <!-- Buttons -->
        <HBox alignment="CENTER" spacing="15">
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBack" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 100;" text="Back" />
            <Button fx:id="createPasswordButton" mnemonicParsing="false" onAction="#handleCreatePassword" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 150;" text="Create Password" />
        </HBox>

        <!-- Login Link -->
        <HBox alignment="CENTER">
            <Label style="-fx-text-fill: white;" text="Already have a password? " />
            <Button fx:id="loginButton" mnemonicParsing="false" onAction="#handleLogin" style="-fx-background-color: transparent; -fx-text-fill: #3498db; -fx-underline: true; -fx-padding: 0;" text="Login here" />
        </HBox>
    </children>
</VBox>

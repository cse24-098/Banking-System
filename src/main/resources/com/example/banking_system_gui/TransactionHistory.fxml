<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="700" prefWidth="900" spacing="20" style="-fx-background-color:  linear-gradient(to bottom, #ff6b6b 0%, #ee5a24 100%); -fx-padding: 30;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.banking_system_gui.HistoryController">

    <!-- Header -->
    <VBox alignment="CENTER" spacing="10">
        <Label style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Transaction History" />
        <Label style="-fx-font-size: 14; -fx-text-fill: #7f8c8d;" text="View all your account transactions" />
    </VBox>

    <!-- Filters -->
    <HBox alignment="CENTER_LEFT" spacing="20">

        <!-- Account Filter -->
        <VBox spacing="5">
            <Label style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Filter by Account:" />
            <ComboBox fx:id="accountFilterComboBox" promptText="All Accounts" style="-fx-pref-width: 180;" />
        </VBox>

        <!-- Transaction Type Filter -->
        <VBox spacing="5">
            <Label style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Filter by Type:" />
            <ComboBox fx:id="typeFilterComboBox" promptText="All Types" style="-fx-pref-width: 150;" />
        </VBox>

        <Region HBox.hgrow="ALWAYS" />

        <!-- Summary Cards -->
        <HBox spacing="15" />
    </HBox>

    <!-- Transactions Table -->
    <VBox spacing="10" VBox.vgrow="ALWAYS">
        <Label style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Transaction History" />

        <TableView fx:id="transactionsTable" prefHeight="400" style="-fx-background-radius: 10;">
            <columns>
                <TableColumn prefWidth="100" text="Date" />
                <TableColumn prefWidth="202.00000762939453" text="Account" />
                <TableColumn prefWidth="198.80001831054688" text="Type" />
                <TableColumn prefWidth="179.59994506835938" text="Amount" />
                <TableColumn prefWidth="162.39996337890625" text="Balance" />
            </columns>
        </TableView>
    </VBox>

    <!-- Search Bar -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <TextField fx:id="searchField" promptText="Search transactions..." style="-fx-pref-width: 300; -fx-pref-height: 35;" />
        <Button fx:id="searchButton" onAction="#handleSearch" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 5; -fx-pref-width: 100;" text="ðŸ” Search" />
        <Button fx:id="clearButton" onAction="#handleClearSearch" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 5; -fx-pref-width: 80;" text="âŒ Clear" />
    </HBox>

    <!-- Action Buttons -->
    <HBox alignment="CENTER" spacing="15">
        <Button fx:id="refreshButton" onAction="#handleRefresh" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-pref-width: 120; -fx-pref-height: 40;" text="Refresh" />

        <Button fx:id="backButton" onAction="#handleBack" prefHeight="26.0" prefWidth="179.0" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-pref-width: 140; -fx-pref-height: 40;" text=" Back To Dashboard" />
    </HBox>

</VBox>

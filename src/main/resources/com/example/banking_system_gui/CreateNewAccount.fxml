<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="600.0" prefWidth="500.0" style="-fx-background: linear-gradient(to bottom, #3498db 0%, #2c3e50 100%);" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.banking_system_gui.CreateNewAccountController">

    <!-- Header -->
    <VBox alignment="CENTER" style="-fx-background-color: #3498db; -fx-padding: 25;">
        <Label style="-fx-text-fill: white; -fx-font-size: 24; -fx-font-weight: bold;" text="Create New Account" />
        <Label style="-fx-text-fill: white; -fx-font-size: 14;" text="Open a new account for customer" />
    </VBox>

    <!-- Main Content -->
    <VBox spacing="20" style="-fx-padding: 30;" VBox.vgrow="ALWAYS">

        <!-- Customer Search Card -->
        <VBox spacing="15" style="-fx-background-color: rgba(255,255,255,0.95); -fx-background-radius: 10; -fx-padding: 20;">
            <Label style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Find Customer" />

            <HBox spacing="10" alignment="CENTER_LEFT">
                <TextField fx:id="searchField" promptText="Enter Customer ID" style="-fx-pref-width: 250;" />
                <Button fx:id="searchButton" onAction="#handleSearch" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Search" />
            </HBox>

            <!-- Customer Details -->
            <VBox fx:id="customerDetailsBox" spacing="8" style="-fx-background-color: #ecf0f1; -fx-background-radius: 5; -fx-padding: 15;" visible="false">
                <Label fx:id="customerNameLabel" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                <Label fx:id="customerIdLabel" style="-fx-text-fill: #7f8c8d;" />
                <Label fx:id="customerEmailLabel" style="-fx-text-fill: #7f8c8d;" />
            </VBox>
        </VBox>

        <!-- Account Details Card -->
        <VBox spacing="15" style="-fx-background-color: rgba(255,255,255,0.95); -fx-background-radius: 10; -fx-padding: 20;">
            <Label style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Account Details" />

            <VBox spacing="12">
                <VBox spacing="5">
                    <Label style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Account Type" />
                    <ComboBox fx:id="accountTypeCombo" promptText="Select account type" />
                </VBox>

                <VBox spacing="5">
                    <Label style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Initial Deposit (BWP)" />
                    <TextField fx:id="initialDepositField" promptText="Enter amount" />
                </VBox>
            </VBox>
        </VBox>

        <!-- Action Buttons -->
        <HBox spacing="15" alignment="CENTER">
            <Button fx:id="createButton" onAction="#handleCreateAccount" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 140;" text="Create Account" />
            <Button fx:id="clearButton" onAction="#handleClear" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-pref-width: 100;" text="Clear" />
            <Button fx:id="cancelButton" onAction="#handleCancel" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-pref-width: 100;" text="Cancel" />
        </HBox>

    </VBox>

</VBox>
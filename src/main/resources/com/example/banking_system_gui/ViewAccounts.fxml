<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox prefHeight="669.0" prefWidth="742.0" style="-fx-background-color: linear-gradient(to bottom, #ff6b6b 0%, #ee5a24 100%);" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.banking_system_gui.ViewAccountsController">

   <!-- Sidebar -->
   <VBox prefWidth="200" style="-fx-background-color: linear-gradient(to bottom, #ff6b6b 0%, #ee5a24 100%);">
      <Label style="-fx-text-fill: white; -fx-font-size: 18; -fx-font-weight: bold; -fx-padding: 20;" text="My Accounts" />
      <VBox spacing="10" style="-fx-padding: 20;">
         <Button fx:id="savingsButton" onAction="#showSavingsAccount" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-alignment: CENTER_LEFT;" text="Savings" />
         <Button fx:id="investmentButton" onAction="#showInvestmentAccount" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-alignment: CENTER_LEFT;" text="Investment" />
         <Button fx:id="chequeButton" onAction="#showChequeAccount" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-alignment: CENTER_LEFT;" text="Cheque" />
         <Region VBox.vgrow="ALWAYS" />
         <Button fx:id="backButton" onAction="#backToDashboard" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Back to Dashboard" />
      </VBox>
   </VBox>

   <!-- Main Content -->
   <VBox spacing="20" style="-fx-padding: 30;" VBox.vgrow="ALWAYS">

      <!-- Welcome and Selected Account -->
      <VBox spacing="10">
         <Label fx:id="welcomeLabel" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: white;" text="Welcome, Customer!" />
         <Label fx:id="selectedAccountLabel" style="-fx-font-size: 18; -fx-text-fill: white;" text="Select an account from the sidebar" />
      </VBox>

      <!-- Account Details -->
      <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 25;" VBox.vgrow="ALWAYS">
         <VBox spacing="15">
            <HBox spacing="20">
               <VBox spacing="5">
                  <Label style="-fx-text-fill: #7f8c8d;" text="Account Number" />
                  <Label fx:id="accountNumberLabel" style="-fx-font-size: 16; -fx-font-weight: bold;" text="---" />
               </VBox>

               <VBox spacing="5">
                  <Label style="-fx-text-fill: #7f8c8d;" text="Account Type" />
                  <Label fx:id="accountTypeLabel" style="-fx-font-size: 16; -fx-font-weight: bold;" text="---" />
               </VBox>

               <VBox spacing="5">
                  <Label style="-fx-text-fill: #7f8c8d;" text="Current Balance" />
                  <Label fx:id="accountBalanceLabel" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #27ae60;" text="BWP 0.00" />
               </VBox>
            </HBox>

            <!-- Account Specific Info -->
            <VBox fx:id="accountInfoBox" spacing="10" style="-fx-padding: 15; -fx-background-color: #f8f9fa; -fx-background-radius: 5;">
               <Label fx:id="interestRateLabel" style="-fx-text-fill: #7f8c8d;" text="Select an account to view details" />
            </VBox>
         </VBox>
      </VBox>

      <!-- Quick Actions -->
      <HBox spacing="15">
         <Button fx:id="depositButton" onAction="#handleDeposit" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 120;" text="Deposit" />
         <Button fx:id="withdrawButton" onAction="#handleWithdraw" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 120;" text="Withdraw" />
      </HBox>

   </VBox>

</HBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="765.0" prefWidth="869.0" spacing="10" style="-fx-background-color: linear-gradient(to bottom, #3498db 0%, #2c3e50 100%);" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.banking_system_gui.CreateNewCustomerController">

    <padding>
        <Insets bottom="15" left="15" right="15" top="15" />
    </padding>

    <children>
        <!-- Header -->
        <VBox alignment="CENTER" prefHeight="60.0" prefWidth="700.0">
            <children>
                <Label style="-fx-font-size: 24; -fx-font-weight: bold;" text="Customer Registration" />
            </children>
        </VBox>

        <!-- Tab Panes -->
        <VBox prefHeight="600.0" prefWidth="839.0">
            <children>
                <TabPane prefHeight="605.0" prefWidth="839.0" style="-fx-background-color: white; -fx-border-radius: 15;" tabClosingPolicy="UNAVAILABLE">
                    <tabs>
                        <!-- Individual Tab -->
                        <Tab text="Individual">
                            <content>
                                <VBox spacing="10" style="-fx-padding: 20;">
                                    <VBox spacing="5">
                                        <Label style="-fx-font-weight: bold;" text="First Name *" />
                                        <TextField fx:id="indFirstName" promptText="Enter first name" style="-fx-pref-width: 350;" />
                                    </VBox>

                                    <VBox spacing="5">
                                        <Label style="-fx-font-weight: bold;" text="Last Name *" />
                                        <TextField fx:id="indLastName" promptText="Enter last name" style="-fx-pref-width: 350;" />
                                    </VBox>

                                    <VBox spacing="5">
                                        <Label style="-fx-font-weight: bold;" text="Date of Birth *" />
                                        <TextField fx:id="indDateOfBirth" promptText="DD/MM/YYYY" style="-fx-pref-width: 350;" />
                                    </VBox>

                                    <VBox spacing="5">
                                        <Label style="-fx-font-weight: bold;" text="Omang ID *" />
                                        <TextField fx:id="indOmangId" promptText="Enter ID number" style="-fx-pref-width: 350;" />
                                    </VBox>

                                    <VBox spacing="5">
                                        <Label style="-fx-font-weight: bold;" text="Phone Number *" />
                                        <TextField fx:id="indPhone" promptText="Enter phone number" style="-fx-pref-width: 350;" />
                                    </VBox>

                                    <VBox spacing="5">
                                        <Label style="-fx-font-weight: bold;" text="Email Address" />
                                        <TextField fx:id="indEmail" promptText="Enter email" style="-fx-pref-width: 350;" />
                                    </VBox>

                                    <VBox spacing="5">
                                        <Label style="-fx-font-weight: bold;" text="Physical Address *" />
                                        <TextField fx:id="indAddress" promptText="Enter physical address" style="-fx-pref-width: 350;" />
                                    </VBox>

                                    <VBox spacing="5">
                                        <Label style="-fx-font-weight: bold;" text="Residence (City/Town) *" />
                                        <TextField fx:id="indResidence" promptText="Enter city/town" style="-fx-pref-width: 350;" />
                                    </VBox>
                                </VBox>
                            </content>
                        </Tab>

                        <!-- Company Tab -->
                        <Tab text="Company">
                            <content>
                                <VBox prefHeight="568.0" prefWidth="839.0" spacing="10" style="-fx-padding: 20;">
                                    <VBox spacing="5">
                                        <Label style="-fx-font-weight: bold;" text="Company Name *" />
                                        <TextField fx:id="compName" promptText="Enter company name" style="-fx-pref-width: 350;" />
                                    </VBox>

                                    <VBox spacing="5">
                                        <Label style="-fx-font-weight: bold;" text="Company Registration Number *" />
                                        <TextField fx:id="compRegNumber" promptText="Enter registration number" style="-fx-pref-width: 350;" />
                                    </VBox>

                                    <VBox spacing="5">
                                        <Label style="-fx-font-weight: bold;" text="Company Address *" />
                                        <TextField fx:id="compAddress" promptText="Enter company address" style="-fx-pref-width: 350;" />
                                    </VBox>

                                    <VBox spacing="5">
                                        <Label style="-fx-font-weight: bold;" text="Location *" />
                                        <TextField fx:id="compLocation" promptText="Enter city/area" style="-fx-pref-width: 350;" />
                                    </VBox>

                                    <VBox spacing="5">
                                        <Label style="-fx-font-weight: bold;" text="Company Phone Number *" />
                                        <TextField fx:id="compPhone" promptText="Enter company phone" style="-fx-pref-width: 350;" />
                                    </VBox>

                                    <VBox spacing="5">
                                        <Label style="-fx-font-weight: bold;" text="Contact Person *" />
                                        <TextField fx:id="compContactPerson" promptText="Enter contact person name" style="-fx-pref-width: 350;" />
                                    </VBox>

                                    <VBox spacing="5">
                                        <Label style="-fx-font-weight: bold;" text="Contact Person Phone" />
                                        <TextField fx:id="compContactPhone" promptText="Enter contact phone" style="-fx-pref-width: 350;" />
                                    </VBox>

                                    <VBox spacing="5">
                                        <Label style="-fx-font-weight: bold;" text="Email *" />
                                        <TextField fx:id="compEmail" promptText="Enter email address" style="-fx-pref-width: 350;" />
                                    </VBox>

                                    <VBox spacing="5">
                                        <Label style="-fx-font-weight: bold;" text="Date of Incorporation *" />
                                        <TextField fx:id="dateOfIncorporation" promptText="DD/MM/YYYY" style="-fx-pref-width: 350;" />
                                    </VBox>
                                </VBox>
                            </content>
                        </Tab>
                    </tabs>
                </TabPane>
            </children>
        </VBox>

        <!-- Buttons -->
        <VBox alignment="CENTER" prefHeight="60.0" prefWidth="700.0">
            <children>
                <HBox alignment="CENTER" spacing="20">
                    <children>
                        <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancel" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 120;" text="Cancel" />
                        <Button fx:id="registerCustomerButton" mnemonicParsing="false" onAction="#handleRegister" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 180;" text="Register Customer" />
                        <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBack" style="-fx-background-color: #95a5a6;" text="Back to dashboard" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</VBox>

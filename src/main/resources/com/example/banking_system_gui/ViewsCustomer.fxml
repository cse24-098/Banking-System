<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="761.0" prefWidth="1111.0" style="-fx-background: linear-gradient(to bottom, #3498db 0%, #2c3e50 100%);" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.banking_system_gui.ViewsCustomerController">

    <!-- Header -->
    <VBox alignment="CENTER" style="-fx-background-color: #3498db; -fx-padding: 20;">
        <Label style="-fx-text-fill: white; -fx-font-size: 24; -fx-font-weight: bold;" text="Customer Management" />
        <Label style="-fx-text-fill: white; -fx-font-size: 14;" text="View and manage all bank customers" />
    </VBox>

    <!-- Main Content Area -->
    <VBox spacing="20" style="-fx-padding: 30;" VBox.vgrow="ALWAYS">

        <!-- Search and Filter Section -->
        <VBox spacing="15" style="-fx-background-color: rgba(255,255,255,0.1); -fx-background-radius: 10; -fx-padding: 20;">
            <Label style="-fx-text-fill: white; -fx-font-size: 18; -fx-font-weight: bold;" text="Search Customers" />

            <HBox alignment="CENTER_LEFT" spacing="15">
                <TextField fx:id="searchField" promptText="Search by name, ID, or email" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-prompt-text-fill: #bdc3c7; -fx-pref-width: 300;" />
                <ComboBox fx:id="filterCombo" promptText="Filter by type" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-pref-width: 150;" />
                <Button fx:id="searchButton" onAction="#handleSearch" style="-fx-background-color: #1a5a8f; -fx-text-fill: white; -fx-pref-width: 100;" text="Search" />
                <Button fx:id="clearButton" onAction="#handleClearSearch" style="-fx-background-color: #7f8c8d; -fx-text-fill: white; -fx-pref-width: 80;" text="Clear" />
            </HBox>

            <!-- Quick Stats -->
            <HBox alignment="CENTER" spacing="30">
                <VBox alignment="CENTER">
                    <Label style="-fx-text-fill: #bdc3c7; -fx-font-size: 12;" text="Total Customers" />
                    <Label fx:id="totalCustomersLabel" style="-fx-text-fill: white; -fx-font-size: 18; -fx-font-weight: bold;" text="0" />
                </VBox>
                <VBox alignment="CENTER">
                    <Label style="-fx-text-fill: #bdc3c7; -fx-font-size: 12;" text="Individual" />
                    <Label fx:id="individualCountLabel" style="-fx-text-fill: #2ecc71; -fx-font-size: 16; -fx-font-weight: bold;" text="0" />
                </VBox>
                <VBox alignment="CENTER">
                    <Label style="-fx-text-fill: #bdc3c7; -fx-font-size: 12;" text="Business" />
                    <Label fx:id="businessCountLabel" style="-fx-text-fill: #e67e22; -fx-font-size: 16; -fx-font-weight: bold;" text="0" />
                </VBox>
            </HBox>
        </VBox>

        <!-- Customers Table - THIS WILL NOW BE RESIZABLE -->
        <VBox prefHeight="248.0" prefWidth="1050.0" spacing="15" style="-fx-background-color: rgba(255,255,255,0.1); -fx-background-radius: 10; -fx-padding: 20;" VBox.vgrow="ALWAYS">
            <HBox alignment="CENTER_LEFT" spacing="15">
                <Label style="-fx-text-fill: white; -fx-font-size: 18; -fx-font-weight: bold;" text="All Customers" />
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="refreshButton" onAction="#handleRefresh" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-pref-width: 100;" text="ðŸ”„ Refresh" />
            </HBox>

            <TableView fx:id="customersTable" prefHeight="105.0" prefWidth="1010.0" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="idColumn" prefWidth="100" text="Customer ID" />
                    <TableColumn fx:id="nameColumn" prefWidth="150" text="Name" />
                    <TableColumn fx:id="typeColumn" prefWidth="80" text="Type" />
                    <TableColumn fx:id="emailColumn" prefWidth="180" text="Email" />
                    <TableColumn fx:id="phoneColumn" prefWidth="120" text="Phone" />
                    <TableColumn fx:id="accountsColumn" prefWidth="133.0" text="Accounts" />
                    <TableColumn fx:id="balanceColumn" prefWidth="130.20001220703125" text="Total Balance" />
                    <TableColumn fx:id="actionsColumn" prefWidth="118.5999755859375" text="Actions" />
                </columns>
            </TableView>
        </VBox>

        <!-- Action Buttons -->
        <HBox alignment="CENTER" spacing="15">
            <Button fx:id="newCustomerButton" onAction="#handleNewCustomer" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 150; -fx-pref-height: 45;" text="âž• New Customer" />
            <Button fx:id="backButton" onAction="#handleBack" style="-fx-background-color: #7f8c8d; -fx-text-fill: white; -fx-pref-width: 180; -fx-pref-height: 45;" text="ðŸ”™ Back to Dashboard" />
        </HBox>

    </VBox>

</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="478.0" prefWidth="498.0" style="-fx-background-color: linear-gradient(to bottom, #3498db 0%, #2c3e50 100%);" fx:controller="com.example.banking_system_gui.BankTellerLoginController" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">

    <center>
        <VBox alignment="CENTER" prefHeight="416.0" prefWidth="400.0" spacing="20">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <!-- Header - Changed for Bank Teller -->
            <VBox alignment="CENTER" spacing="10">
                <Label style="-fx-text-fill: white; -fx-font-size: 24; -fx-font-weight: bold;" text="Bank Teller Portal" />
                <Label style="-fx-text-fill: #ecf0f1; -fx-font-size: 14;" text="Secure Employee Login" />
            </VBox>

            <!-- Login Form -->
            <VBox alignment="CENTER_LEFT" spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 25;">
                <Label style="-fx-font-weight: bold; -fx-text-fill: #333;" text="Employee ID" />
                <TextField fx:id="usernameField" promptText="Enter your employee ID" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-pref-width: 250;" />

                <Label style="-fx-font-weight: bold; -fx-text-fill: #333;" text="Password" />
                <PasswordField fx:id="passwordField" promptText="Enter your password" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-pref-width: 250;" />

                <!-- Login Button -->
                <Button fx:id="loginButton" onAction="#handleTellerLogin" prefWidth="184.0" style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-pref-width: 250; -fx-pref-height: 35;" text="Teller Login" />

                <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancel" prefHeight="30.0" prefWidth="250.0" text="Cancel" />
            </VBox>

            <!-- Footer -->
            <HBox alignment="CENTER" spacing="5" />
        </VBox>
    </center>

</BorderPane>
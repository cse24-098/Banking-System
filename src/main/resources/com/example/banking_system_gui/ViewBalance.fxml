<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="600" prefWidth="700" spacing="25" style="-fx-background-color: linear-gradient(to bottom, #ff6b6b 0%, #ee5a24 100%); -fx-padding: 30;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.banking_system_gui.ViewBalanceController">

    <!-- Header -->
    <VBox alignment="CENTER" spacing="10">
        <Label style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: white;" text="Account Summary" />
        <Label style="-fx-font-size: 14; -fx-text-fill: white;" text="Quick overview of your finances" />
    </VBox>

    <!-- Total Balance Card -->
    <VBox alignment="CENTER" style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 15, 0, 0, 5);">
        <Label style="-fx-font-size: 18; -fx-text-fill: #7f8c8d;" text="Total Available Balance" />
        <Label fx:id="totalBalanceLabel" style="-fx-font-size: 48; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-padding: 10 0 0 0;" text="BWP 0.00" />
        <Label fx:id="accountCountLabel" style="-fx-font-size: 14; -fx-text-fill: #95a5a6; -fx-padding: 10 0 0 0;" text="Across 0 accounts" />
    </VBox>

    <!-- Account List -->
    <VBox spacing="15">
        <Label style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: white;" text="Your Accounts" />

        <!-- Dynamic Accounts Container -->
        <VBox fx:id="accountsContainer" spacing="10" />
    </VBox>

    <!-- Actions -->
    <HBox alignment="CENTER" spacing="20">
        <Button onAction="#handleRefresh" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-pref-width: 120; -fx-pref-height: 40;" text="ðŸ”„ Refresh" />
        <Button onAction="#handleViewAccounts" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-pref-width: 160; -fx-pref-height: 40;" text="ðŸ“‹ View All Accounts" />
        <Button onAction="#handleBack" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-pref-width: 120; -fx-pref-height: 40;" text="ðŸ”™ Back" />
    </HBox>

</VBox>

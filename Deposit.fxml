<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="589.0" prefWidth="500" spacing="20" style="-fx-background-color: linear-gradient(to bottom, #ff6b6b 0%, #ee5a24 100%); -fx-padding: 30;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">

    <!-- Header -->
    <VBox alignment="CENTER" spacing="10">
        <Label style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Make a Deposit" />
        <Label style="-fx-font-size: 14; -fx-text-fill: #7f8c8d;" text="Add funds to your account" />
    </VBox>

    <!-- Deposit Form -->
    <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 25;">

        <!-- Account Selection -->
        <VBox spacing="8">
            <Label style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Select Account:" />
            <ComboBox fx:id="accountComboBox" promptText="Choose account to deposit to" style="-fx-pref-width: 300;" />
        </VBox>

        <!-- Amount Input -->
        <VBox spacing="8">
            <Label style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Amount to Deposit:" />
            <TextField fx:id="amountField" promptText="Enter amount in BWP" style="-fx-pref-width: 300;" />
            <Label style="-fx-font-size: 11; -fx-text-fill: #7f8c8d;" text="Minimum deposit: BWP 10.00" />
        </VBox>

        <!-- Current Balance Display -->
        <VBox spacing="8">
            <Label style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Current Balance:" />
            <Label fx:id="currentBalanceLabel" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #27ae60;" text="BWP 0.00" />
        </VBox>

        <!-- Buttons -->
        <HBox alignment="CENTER" spacing="15">
            <Button onAction="#handleConfirmDeposit" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-pref-width: 160; -fx-pref-height: 40;" text="Confirm Deposit" />

            <Button onAction="#handleCancel" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-pref-width: 120; -fx-pref-height: 40;" text="âŒ Cancel" />
        </HBox>
    </VBox>

    <!-- Quick Amount Buttons -->
    <VBox spacing="10">
        <Label style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Quick Deposit:" />
        <HBox alignment="CENTER" spacing="10">
            <Button onAction="#handleQuickAmount100" style="-fx-background-color: #ecf0f1; -fx-text-fill: #2c3e50; -fx-background-radius: 5; -fx-pref-width: 80;" text="BWP 100" />
            <Button onAction="#handleQuickAmount500" style="-fx-background-color: #ecf0f1; -fx-text-fill: #2c3e50; -fx-background-radius: 5; -fx-pref-width: 80;" text="BWP 500" />
            <Button onAction="#handleQuickAmount1000" style="-fx-background-color: #ecf0f1; -fx-text-fill: #2c3e50; -fx-background-radius: 5; -fx-pref-width: 80;" text="BWP 1000" />
        </HBox>
    </VBox>
   <HBox prefHeight="39.0" prefWidth="439.0">
      <children>
         <Button mnemonicParsing="false" prefHeight="38.0" prefWidth="222.0" text="Back to dashboard" />
      </children></HBox>

</VBox>
